

<div class="container">
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{# if noMessage}}hidden{{/ if}}>
            {{successMsg}}
        </div>
    </div>
</div>

{{# each products}}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="clearfix">
                            <h4>{{ this.title }}</h4>
                            <div class="description">
                            <p>{{ this.description }}</p>
                            </div>
                            <div class="price pull-left">
                                <h4>Rs.{{ this.price }}</h4>
                            </div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right " role="button">Add to shopping cart</a>
                        </div>
                </div>
            </div>
        {{/ each }}   
    </div>
{{/ each }}
</div>


